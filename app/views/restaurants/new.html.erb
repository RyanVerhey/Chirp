<h1>Create a new Restaurant!</h1>
  <%= form_for @restaurant do |f|%>
    <%= f.check_box :owner %>
    <%= f.label :owner, 'Are you the owner of this restaurant?'%><br><br>

    <%= f.label :name, 'Restaurant name:' %><br>
    <%= f.text_field :name %><br><br>


    <%= f.label :description, 'Describe your restaurant:' %><br>
    <%= f.text_area :description, size: "60x12" %><br><br>

    <%= f.label :street_address, 'Street Address:' %><br>
    <%= f.text_field :street_address %><br><br>

    <%= f.label :city, 'City:' %><br>
    <%= f.text_field :city %><br><br>

    <%= f.label :state, 'State:' %><br>
    <%= f.text_field :state %><br><br>

    <%= f.label :zip_code, 'Zip Code:' %><br>
    <%= f.text_field :zip_code %><br><br>

    <%= f.submit "Create the Restaurant!" %>
  <% end %>
