<h1>Write a Review</h1>
  <%= form_for @review , url: restaurant_reviews_path do |f|%>
    <%= f.label :stars, 'How many grasshoppers would you give your experience?'%>
    <%= f.select :stars, options_for_select((1..5).to_a) %><br><br>

    <%= f.label :content, 'Review:'%><br>
    <%= f.text_area :content, size: "60x12" %><br>
    <%= f.hidden_field :restaurant_id, value: params[:restaurant_id] %>
    <%= f.hidden_field :reviewer_id, value: session[:user_id] %>
    <%= f.submit%>
  <% end %>


